extends layout

block content

    <div class="margin-for-carousel"> 

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
            <div class="item active width-for-carousel">
                <img class="image-in-carousel" src="https://images.pexels.com/photos/1438404/pexels-photo-1438404.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="Profile photo" style="width:100%;">
            </div>

            <div class="item width-for-carousel">
                <img class="image-in-carousel" src="https://images.pexels.com/photos/3039036/pexels-photo-3039036.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="Profile photo" style="width:100%;">
            </div>
            
            <div class="item width-for-carousel">
                <img class="image-in-carousel" src="https://images.pexels.com/photos/1141835/pexels-photo-1141835.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="Profile photo" style="width:100%;">
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="container margine-for-profile margin-for-image-profile">
        img(class='profile_image opacity-for-image-profile' src="https://i.ibb.co/dQXbPqz/1786-oooo-plus.png", alt="")

        .container(class='margine-for-profile')

            div(class='list-group')
                a(class='list-group-item' href='/users/'+user.id+'/profile/edit') Profile
                a(class='list-group-item' href='/users/'+user.id+'/profile/news') User News
                a(class='list-group-item' href='/users/'+user.id+'/profile/activities') User Activities
            if user
                label Name:
                p= user.name

                label Email:
                p= user.email

                label Username:
                p= user.username
    </div>

    
    